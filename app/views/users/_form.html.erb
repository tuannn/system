<%= form_for @user do |f| %>

<table class = "user_form">
	<tr>
		<td><%= f.label :email%></td>
		<td><%= f.text_field :email%> <p id="autoresult"></p></td>
	</tr>
	<tr>
		<td><%= f.label :role %></td>
		<% if current_user.role == "admin"%>
		<td><%= f.collection_select :role, User::ROLES, :to_s, :humanize %></td>
		<% end %>
		<% if current_user.role == "moderator"%>
		<td><%= f.collection_select :role, User::MO_ROLES, :to_s, :humanize %></td>
		<% end %>
	</tr>
	<tr>
		<td><%= f.label :avatar%></td>
		<td><%= f.file_field :avatar%></td>
	</tr>
	<tr>
		<td colspan="2" align="center"><%= link_to "Index", users_path, {"data-icon" => "button"} %><%= f.submit @user.new_record? ? "Create" : "Update"%></td>
	</tr>
</table>

<% end %>