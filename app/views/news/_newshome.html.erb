<% if @shopcategory %>
<% @news = @shopcategory.news.order(:created_at).last %>
<!-- begin category wrapper -->
<div class="categorywrapper">
	<h2 id="categoryname"><%= @shopcategory.name %></h2>
	<%= render('news/firstnews')%>

	<!-- begin highlight -->
	<div class="post">

		<% @shopcategory.news.order("created_at DESC").limit(4).offset(1).each do |news| %>
		<% @news = news %>

		<%= render('shared/newsthumb') %>
		<div class="clearhighlight"></div>
		<% end %>

		<a class="continue" href="#">View alls</a>
	</div>
	<!-- end post -->
</div>
<!-- end category wrapper -->
<% end %>
