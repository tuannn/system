<%= form_for @shop do |f| %>
<table class="newshop">
	<tr>
		<td><%= f.label :name %></td>
		<td><%= f.text_field :name %></td>
	</tr>
	<tr>
		<td><%= f.label :description %></td>
		<td><%= f.text_area :description %></td>
	</tr>
	<tr>
		<td><%= f.label :email %></td>
		<td><%= f.text_field :email %></td>
	</tr>
	<tr>
		<td><%= f.label :address %></td>
		<td><%= f.text_field :address %></td>
	</tr>
	<tr>
		<td><%= f.label :tel %></td>
		<td><%= f.text_field :tel %></td>
	</tr>
	<tr>
		<td><%= f.label :avatar %></td>
		<td><%= f.file_field :avatar %></td>
	</tr>
	<tr>
		<td><%= f.label :shop_category_id %></td>
		<td><%= f.collection_select :shop_category_id, ShopCategory.order(:name).all, :id, :name %></td>
	</tr>
	<tr align="center">
		<td colspan="2"><%= f.submit @shop.new_record? ? "Create" : "Update"%></td>
	</tr>
</table>
<% end %>
