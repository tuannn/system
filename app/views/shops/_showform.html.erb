<table class="showshop">
	<tr>
		<td rowspan="5" >
		<div class="shopimage">
			<%= image_tag(@shop.avatar_url)%>
		</div></td>
	</tr>
	<tr>
		<td colspan="2"><h2><%= @shop.name %>
		<% if signed_in? %>
		<% if current_user == @shop.user || current_user.role == "admin" %>
		<%= link_to "edit", "#", id: "shopname" %>
		<% end %>
		<% end %> </h2></td>
	</tr>
	<tr>
		<td>Address</td>
		<td><%= @shop.address %></td>
	</tr>
	<tr>
		<td>Email</td>
		<td><%= @shop.email %></td>
	</tr>
	<tr>
		<td>Tel</td>
		<td><%= @shop.tel %></td>
	</tr>
	<tr>
		<td colspan="3"><%= @shop.description %></td>

	</tr>
</table>