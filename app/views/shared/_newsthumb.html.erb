<% if @news %>
<div class="catehighlight">
	<a href="<%= news_path(@news) %>"><%= image_tag(@news.avatar_url, class: "smallthumb") %></a>
	<h4><a href="<%= news_path(@news) %>"><%= @news.title %></a></h4>
	<p class="date">
		<%= @news.created_at %>
	</p>
</div>
<% if current_user == @news.user %>
<div class="break"></div>
<div id="newspanel">
	<p>
		<%= link_to "Edit", edit_news_path(@news) %>
	</p>
	<p>
		<%= link_to "Delete", "#" %>
	</p>
</div>
<% end %>
<% end %>
